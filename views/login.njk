{% extends "_base.njk" %}

{% block main %}
   
                  <form  class="needs-validation" novalidate action = '/login' method ='POST' >
                    
                    <div class="form-group">
                      <input type="email" class="form-control" id="InputEmail" aria-describedby="emailHelp" name="email" placeholder="Email..." required>
                    </div>
                    <div class="form-group">
                      <input type="password" class="form-control" id="InputPassword" name = "password" placeholder="Senha" required>
                    </div>
                    
                    <div class="form-group">
                      <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </div>
                                    
                
                  </form>
                 <div class="form-group">
                    <hr>

                    <div class="text-center">
                      <a class="small" href="/forgotpassword">Esqueci minha senha</a>
                    </div>
                    <div class="text-center">
                      <a class="small" href="/register">Registrar-me</a>
                    </div>
                  </div>
              
{% endblock %}

